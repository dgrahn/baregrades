<!DOCTYPE html>
<html>
<head>
	<title>BareGrades</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900' rel='stylesheet' type='text/css'>
	<script type="text/javascript" src="https://www.google.com/jsapi"></script>

	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body>

<header class="main">
	<div>
		<div>
			<%= link_to "BareGrades", root_path, class:"brand" %>
			<div>
				<a class="btn" href="<%= account_path %>"><i class="icon-user"></i> <%= @current_user.first_name %></a>
				<a class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
				<ul>
					<li><a href="<%= edit_user_path(@current_user) %>"><i class="icon-pencil"></i> Edit</a></li>
					<li><a href="<%= feedback_path %>"><i class="icon-eye-open"></i> Send Feedback</a></li>
					
					<% if @current_user.is_administrator? %>
						<li><a href="#"><i class="icon-briefcase"></i> Admin</a></li>
					<% end %>

					<li class="divider"></li>
					<li><a href="<%= logout_path %>"><i class="icon-hand-left"></i> Log Out</a></li>
				</ul>
			</div>
		</div>
	</div>
</header>

<header id="content-head" class="<%= @current_user.theme ? @current_user.theme.css_class : "pond" %>">
	<div>
		<%= yield :head %>
	</div>
</header>

<div id="content">
	<div>
		<aside class="span3">
			<h2>Actions</h2>
			<nav>
				<%= yield :nav %>
			</nav>
		
			<h2>Courses</h2>
			<% if @current_user %>
				<nav>
					<% @current_user.courses.each do |course| %>
						<a href="<%= course_path(course) %>" class="<%= cp(course_path(course)) %>">
							<% grade = course.user_grade(@current_user) %>
							<!-- <%= render "courses/gradeBlock", :grade => course.user_grade(@current_user), :course => course %> -->
							<%= course.name %>
							<span class="<%= course.grade_letter_class(grade) %>"><%= grade ? "%02d" % grade : "" %></span>
						</a>

						<% if @course and course.id == @course.id %>	
							<% course.assignment_types.each do |assignment_type| %>
								<span class="sublink <%= cp(course_assignment_type_path(course, assignment_type)) %>">
									<% grade = assignment_type.user_grade(@current_user) %>
									<span class="<%= course.grade_letter_class(grade) %>"><%= grade ? "%02d" % grade : "" %></span>
									<%= assignment_type.name %>
								</span>
							<% end %>
						<% end %>
					<% end %>
				</nav>
				<%= link_to "Add a Course", courses_path, class:"btn" %>
			<% end %>
		</aside>
		<div class="span8 offset1">
			<% flash.each do |name, msg| %>
				<div class="alert alert-<%= name %>">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<%= msg %>
				</div>
			<% end %>

			<%= yield %>
		</div>
	</div>

	<footer>
		<!-- &copy; 2013 | <%= link_to "Privacy", privacy_path() %> -->
	</footer>
</div>

</body>
</html>
