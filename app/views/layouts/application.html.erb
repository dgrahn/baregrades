<!DOCTYPE html>
<html>
<head>
  <title>BareGrades</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- [START] User Navigation -->
<nav id="user">
	<% if current_user %>
		Howdy <%= current_user.first_name %>! |
		<%= link_to "Log Out", logout_path %>
	<% else %>
		<%= link_to "Register", register_path %> |
		<%= link_to "Log In", login_path %>
	<% end %>
</nav>
<!-- [END] User Navigation -->

<!-- [START] Flashes -->
<% if flash[:success] %>
	<div id="success" style="background: #AFA; border: 1px solid green; padding: 5px 10px;">
		<%= flash[:success] %>
	</div>
<% end %>
<% if flash[:error] %>
	<div id="error" style="background: #FAA; border: 1px solid red; padding: 5px 10px;">
		<%= flash[:error] %>
	</div>
<% end %>
<!-- [END] Flashes -->

<nav id="user">
</nav>

<%= yield %>

</body>
</html>
