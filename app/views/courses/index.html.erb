<% content_for :head do %>
	<h1>Courses</h1>
<% end %>
<% content_for :nav do %>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Identifier</th>
    <th>Section</th>
    <th>Description</th>
    <th>Pin</th>
    <th>Student managed</th>
    <th>Credits</th>
    <th>Points based</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.identifier %></td>
    <td><%= course.section %></td>
    <td><%= course.description %></td>
    <td><%= course.pin %></td>
    <td><%= course.student_managed %></td>
    <td><%= course.credits %></td>
    <td><%= course.points_based %></td>
    <td><%= link_to "Show", course %></td>
    <td><%= link_to "Edit", edit_course_path(course) %></td>
    <td><%= link_to "Destroy", course, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>

