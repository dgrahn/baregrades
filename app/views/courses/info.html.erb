<% content_for :head do %>
	<% render "head" %>
<% end %>
<% content_for :nav do %>
	<%= render :partial => "courses/navigation", active:"summary" %>
<% end %>

<header>
	<div class="action-menu">
		<ul>
			<li class="nav-header">Action</li>
			<li><%= link_to "Edit", edit_course_path(@course) %></li>
			<li><%= link_to "Add Assignment Type", new_course_assignment_type_path(@course) %></li>
			<li><%= @course.grade_scale ? link_to("Edit Grade Scale", edit_course_grade_scale_path(@course)) :  link_to("Add Grade Scale", new_course_grade_scale_path(@course)) %></li>
			<li><%= link_to "Leave", course_leave_path(@course) %></li>
		</ul>
	</div>
	<h1>Course Info</h1>
</header>

<p><%= @course.description %></p>

<p>
	<b>Professor:</b> <%= @course.professor %><br/>
	<b>Credits:</b> <%= @course.credits %><br/>
	<%if @course.points_based%>
		<b>Points based</b>
	<%end%>
</p>

<%= render :partial => "gradeScale", :locals => {:course => @course, :grade_scale => @course.grade_scale} %>

<!--
<p>
  <b>Pin:</b> <%= @course.pin %><br/>
  <b>Points based:</b> <%= @course.points_based %><br/>
</p>
-->

<div class="row-fluid">
	<ul class="thumnails">
	<% @course.assignment_types.each do |assignment_type| %>
		<% grade = assignment_type.user_grade(@current_user) %>
		<li class="span6">
			<div class="thumbnail">
				<div class="caption">
					<h3><%= link_to assignment_type.name, course_assignment_type_path(@course, assignment_type) %> <small><%= "%02d\%" % assignment_type.worth %></small></h3>
					<p><%= assignment_type.description %></p>

					
					<%= link_to "Edit", edit_course_assignment_type_path(@course, assignment_type), :class => "btn btn-primary" %>
					<%= link_to "Delete", course_assignment_type_path(@course, assignment_type), :confirm => "Are you sure?", :method => :delete, :class => "btn btn-danger" %>
				</div>
			</div>
		</li>
	<% end %>
	</ul>
</div>