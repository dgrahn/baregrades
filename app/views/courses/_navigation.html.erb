<%= link_to "Summary", course_path(@course) %>
<%= link_to "Calendar", course_calendar_path(@course) %>
<%= link_to "Info", course_info_path(@course) %>

<% if local_assigns[:subpage] and subpage.downcase == "info" %>
	<%= link_to "Edit", edit_course_path(@course), class:"sublink" %>
	<%= link_to "Add Assignment Type", new_course_assignment_type_path(@course), class:"sublink" %>
	
	<% if @course.grade_scale %>
		<%= link_to "Edit Grade Scale", edit_course_grade_scale_path(@course), class:"sublink" %>
	<% else %>
		<%= link_to "Add Grade Scale", new_course_grade_scale_path(@course), class:"sublink" %>
	<% end %>

	<%= link_to "Leave", course_leave_path(@course), class:"sublink" %>
<% end %>

<%= link_to "Analysis", course_analysis_path(@course) %>