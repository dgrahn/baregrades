<% content_for :head do %>
	<% render "head" %>
<% end %>
<% content_for :nav do %>
	<div class="right">
		<a class="dropdown" href="#">Info</a>
		<%= number_of_students %> <img src="/assets/user.png" alt="Number of Students"/>
	</div>

	<%= link_to "Summary", course_path(@course) %>
	<a href="#">//Analysis</a>
	<a href="#">//Calendar</a>
<% end %>


<section class="dropdown">
	<div>
		<h2>Assignment Type Info</h2>
		<nav>
			<%= link_to "Add Assignment", new_assignment_type_assignment_path(@assignment_type) %> |
			<%= link_to "Edit", edit_course_assignment_type_path(@course, @assignment_type) %>
		</nav>

		<p><%= @assignment_type.description %></p>

		<p>
		  <b>Worth:</b> <%= @assignment_type.worth %>
		</p>
	</div>
</section>

<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>Grade</th>
		<th>Worth</th>
		<th>Percent</th>
		<th></th>
	</tr>
	<% @assignment_type.assignments.each do |assignment| %>
		<tr>
			<td><%= link_to assignment.name, assignment_type_assignment_path(@assignment_type, assignment) %></td>
			<td><%= assignment.description %></td>
			<td><%= assignment.user_grade(@current_user) %></td>
			<td><%= assignment.worth %></td>
			<td><%= assignment.user_percentage(@current_user) %></td>
			<td><%= link_to "Delete", assignment_type_assignment_path(@assignment_type, assignment), :confirm => "Are you sure?", :method => :delete %></td>
		</tr>		
	<% end %>
</table>