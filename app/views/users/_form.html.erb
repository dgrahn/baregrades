<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<div class="row">
		<div class="span4">
			<h2>Login</h2>
			<%= f.text_field :username, popover("Username", "The name which you will use to sign in. This is not visible to anyone else.", ["cbartlet", "frankyc"]) %>
			<%= f.password_field :password, popover("Password", "A standard password. Make this secure by adding in capitals, numbers, and symbols.", ["TheWalkingDead2010", "TheHobbit2012"]) %>
			<%= f.password_field :password_confirmation, popover("Password Confirmation", "The same password as above, to make sure you type it correctly") %>
			<%= f.select :theme_id, options_from_collection_for_select(@themes, :id, :name, @user.theme_id) %>
		</div>

		<div class="span4">
			<h2>Contact</h2>
			<%= f.text_field :email, placeholder:"Email" %>
			<%= f.text_field :first_name, placeholder:"First Name" %>
			<%= f.text_field :middle_name, placeholder:"Middle Name" %>
			<%= f.text_field :last_name, placeholder:"Last Name" %>
		</div>
	</div>

	<br/>
	<%= f.submit "Register", class:"btn btn-primary" %>
<% end %>
