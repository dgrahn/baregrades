<% content_for :head do %>
	<h1>Users</h1>
<% end %>

<% render "admin/navigation" %>

<h3>There are currently <%= pluralize(@users.length, "user") %></h3>

<form>
	<strong>Search: </strong><br/>
	<input type="text" name="search" id="search"/>
</form>

<table class="table table-striped table-middle">
	<thead>
		<tr>
			<th></th>
			<th>Username</th>
			<th>First name</th>
			<th>Middle name</th>
			<th>Last name</th>
			<th>Email</th>
			<th>Courses</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td>
					<% if user.enabled %>
						<i class="icon-ok"></i>
					<% end %>
				</td>
				<td><%= user.username %></td>
				<td><%= user.first_name %></td>
				<td><%= user.middle_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.email %></td>
				<td><%= link_to user.courses.length, users_courses_path(user) %> </td>
				<td>
					<div class="dropdown">
						<a class="dropdown-toggle btn" data-toggle="dropdown" href="#">
							<i class="icon-user"></i>
						</a>
						<ul class="dropdown-menu">
							<%= li_to "Show", user %>
							<%= li_to "Edit", edit_user_path(user) %>
							<%= li_to "Enable", admin_confirm_path(user) %>
							<li class="divider"></li>
							<%= li_to "Destroy", user, method: :delete, data: { confirm: "Are you sure?" } %>
						</ul>
					</div>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<script>
	$(document).ready(function() {
		$.expr[':'].containsIgnoreCase = function(n,i,m){
			return jQuery(n).text().toUpperCase().indexOf(m[3].toUpperCase())>=0;
		};


		$("#search").keyup(function(){
			var data = this.value.split(" ");
			var rows = $("tbody").find("tr");
			
			if(this.value == "") {
				rows.show();
				return;
			}

			rows.hide();

			$.each(data, function(i, v){
				//Use the new containsIgnoreCase function instead
				rows = rows.filter("*:containsIgnoreCase('"+ v +"')");
			});

			rows.show();

		}).focus(function(){
			this.value = "";
			$(this).unbind('focus');
		});
	});
</script>

<p><%= link_to "New User", new_user_path, class:"btn" %></p>
