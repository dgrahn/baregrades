<%= form_for(@assignment) do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% @assignment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
	<%= f.label :assignment_type_id %>
	<%=
		if @assignment.assignment_type
			value = @assignment.assignment_type.id
		else
			value = @assignment.assignment_type
		end
		
		f.select :assignment_type_id, options_from_collection_for_select(@assignment_types, :id, :name, value), popover("Themes", "Use themes to change the appearance of BareGrades", ["Goldfish", "Snow Purple"])
	%>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :worth %>
    <%= f.text_field :worth %>
  </div>
    <div class="field">
    <%= f.label :due_date %>
    <%= f.text_field :due_date %>
  </div><br /><br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
