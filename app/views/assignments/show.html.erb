<% content_for :head do %>
	<% render "courses/head" %>
<% end %>

<%= render "assignments/navigation" %>

<h1><%= @assignment.name %></h1>

<table class="table">
	<tbody>
		<tr>
			<th class="text-right no-border">Name:</th>
			<td><%= @assignment.name %></td>
		</tr>
		<tr>
			<th class="text-right no-border">Description:</th>
			<td><%= @assignment.description %></td>
		</tr>
		<tr>
			<th class="text-right no-border">Worth:</th>
			<td><%= @assignment.worth %></td>
		</tr>
		<tr>
			<th class="text-right no-border">Grade:</th>
			<td><%= @assignment.user_grade(@current_user) %></td>
		</tr>
		<tr>
			<th class="text-right no-border">Percentage:</th>
			<td><%= @assignment.user_percentage(@current_user) %>%</td>
		</tr>
		<tr>
			<th class="text-right no-border">Class Average:</th>
			<td><%= @assignment.average %>%</td>
		</tr>
		<tr>
			<th class="text-right no-border">Class Maximum:</th>
			<td><%= @assignment.maximum %>%</td>
		</tr>
		<tr>
			<th class="text-right no-border">Class Minimum:</th>
			<td><%= @assignment.minimum %>%</td>
		</tr>
		<tr>
			<th class="text-right no-border">Due:</th>
			<td><%= @assignment.due_date %></td>
		</tr>
	</tbody>
</table>