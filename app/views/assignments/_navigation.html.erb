<%
	content_for :actions do
		if not @assignment.is_disabled(@current_user)
			concat li_to *manage_grade_path(@assignment)
		end

		if not @assignment.user_grade(@current_user).blank?
			concat li_to "Delete Grade", assignment_grade_path(@assignment), confirm:"Are you sure you want to delete your grade?", method: :delete
		end
		
		concat li_to "Edit", edit_assignment_path(@assignment)
	end
%>